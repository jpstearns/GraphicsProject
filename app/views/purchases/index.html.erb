<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Dob</th>
      <th>Ssn</th>
      <th>Address</th>
      <th>Line2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Creditcard</th>
      <th>Cardtype</th>
      <th>Requests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.fname %></td>
        <td><%= purchase.lname %></td>
        <td><%= purchase.dob %></td>
        <td><%= purchase.ssn %></td>
        <td><%= purchase.address %></td>
        <td><%= purchase.line2 %></td>
        <td><%= purchase.city %></td>
        <td><%= purchase.state %></td>
        <td><%= purchase.zip %></td>
        <td><%= purchase.creditcard %></td>
        <td><%= purchase.cardtype %></td>
        <td><%= purchase.requests %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

